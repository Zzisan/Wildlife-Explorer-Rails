<h1>Observations</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Observer</th>
      <th>Notes</th>
      <th>Observed At</th>
      <th>Animal</th>
    </tr>
  </thead>
  <tbody>
    <% @observations.each do |obs| %>
      <tr>
        <td><%= obs.observer_name %></td>
        <td><%= obs.notes %></td>
        <td><%= obs.observed_at.strftime("%b %d, %Y") %></td>
        <td><%= link_to obs.animal.common_name, animal_path(obs.animal) if obs.animal %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="mt-3">
  <%= paginate @observations if @observations.respond_to?(:total_pages) %>
</div>
