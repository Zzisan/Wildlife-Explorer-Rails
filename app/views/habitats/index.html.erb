<h1>Habitats</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @habitats.each do |habitat| %>
      <tr>
        <td><%= habitat.name %></td>
        <td><%= habitat.location %></td>
        <td>
          <%= link_to 'View', habitat_path(habitat), class: "btn btn-sm btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="mt-3">
  <%= paginate @habitats if @habitats.respond_to?(:total_pages) %>
</div>
