<h1 class="mb-4">Habitats</h1>

<div class="table-responsive">
  <% if @habitats.present? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @habitats.each do |habitat| %>
          <tr>
            <td><%= habitat.name %></td>
            <td><%= habitat.location %></td>
            <td><%= habitat.description %></td>
            <td>
              <%= link_to 'View', habitat_path(habitat), class: "btn btn-sm btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-3">
      <%= paginate @habitats %>
    </div>
  <% else %>
    <div class="alert alert-info">No habitats found.</div>
  <% end %>
</div>
